[
  {
    "name": "${container_name}",
    "image": "ballotnav/ballotnav:8fa00e5",
    "cpu": ${container_cpu},
    "memory": ${container_memory},
    "portMappings": [
      { "containerPort": ${container_port}, "hostPort": ${container_port} },
      { "containerPort": 80, "hostPort": 80 }
    ],
    "essential": true,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group" : "/${cluster_name}/${task_name}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "ecs",
        "awslogs-create-group": "true"
      }
    },
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:${container_port}/status || exit 1"
      ],
      "interval": 10,
      "timeout": 10,
      "retries": 2
    },
    "environment": [
      { "name": "NODE_ENV", "value": "production" },
      { "name": "NODE_ENV", "value": "production" },
      { "name": "NODE_ENV", "value": "production" }
    ],
    "command": ["node", "app.js"]
  }
]
